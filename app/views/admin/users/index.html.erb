<div class="container">
  <h1>admin user index page</h1>

  <div class="btn btn-default"><%= link_to t('views.title.create_user'), new_admin_user_path %></div>
  <uL>
    <h4>user detail</h4>
    <% @user.each do |user| %>
      <p>id: <%= user.id %></p>
      <p><%= t('views.user_detail.name') %>: <%= user.name %></p>
      <p><%= t('views.user_detail.email') %>: <%= user.email %></p>
      <p><%= t('views.user_detail.admin') %>: <%= user.admin? ? 'admin' : 'not admin' %></p>
      <p><%= t('views.user_detail.task_count') %>: <%= user.tasks.count %></p>
      <p class="btn btn-default"><%= link_to t('views.button.edit'), edit_admin_user_path(user.id) %></p>
      <p class="btn btn-default"><%= link_to t('views.button.delete'), admin_user_path(user.id), method: :delete %></p>
      <p class="btn btn-default"><%= link_to t('views.button.show'), admin_user_path(user.id) %></p>
    <% end %>
  </ul>
</div>
