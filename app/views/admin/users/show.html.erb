<div class="container">
  <h1><%= @user.name %>'s detail page</h1>

  <h4>id: <%= @user.id %></h4>
  <h4>email: <%= @user.email %></h4>
  <h4>admin: <%= @user.admin? ? 'admin' : 'not admin' %></h4>

  <% if @user.tasks.present? %>
  <ul>
    <% @user.tasks.each do |task| %>
      <p>task id: <%= task.id %></p>
      <p><%= t('view.detail.title') %>: <%= task.title %></p>
      <p><%= t('view.detail.content') %>: <%= task.content %></p>
      <p><%= t('view.detail.status') %>: <%= task.status %></p>
      <p><%= t('view.detail.priority') %>: <%= task.priority %></p>
      <p><%= t('view.detail.limit_datetime') %>: <%= task.limit_datetime %></p>
      <p><%= t('view.detail.created_at') %>: <%= task.created_at %></p>
      <p><%= t('view.detail.updated_at') %>: <%= task.updated_at %></p>
      <ul>
        <% if task.labeling_label.present? %>
          <strong>labes:</strong>
        <% end %>
        <% task.labeling_label.each do |label| %>
          <%= label.name %>
        <% end %>
        </p>
      </ul>
      <br />
    <% end %>
  </ul>
  <% else %>
    <h4>no contents date</h4>
  <% end %>
  <div class="btn btn-default"><%= link_to t('view.button.back'), admin_users_path %></div>
</div>
