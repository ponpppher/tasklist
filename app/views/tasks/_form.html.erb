<div class="container">
  <%= form_with(model:@task, local:true, url: choose_new_or_edit ) do |f| %>

    <div class ="form-group">
      <%= f.label :title, t('view.title') %>
      <%= f.text_field :title, { class: 'form-control', placeholder:"Title" } %>
    </div>

    <div class ="form-group">
      <%= f.label :content, t('view.content') %>
      <%= f.text_area :content, { class: 'form-control', placeholder:"Task Content" } %>
    </div>

    <br />
    <div class ="form-group">
      <%= f.label :status, t('view.status') %>
      <%= f.select :status , \
        {"未着手" => t('view.not_yet_started'), "着手" => t('view.start'), "完了" => t('view.complete')},\
        include_blank: true, selected: "", class:"form-control"\
      %>
    </div>

    <div class ="form-group">
      <%= f.label :priority, t('view.priority') %>
      <%= f.select :priority, Task.priorities_i18n.invert, class:"form-control" %>
    </div>

    <div class ="form-group">
      <div><%= f.label :label, t('view.label') %></div>
      <% Label.all.each do | label | %>
        <%= f.check_box :label_ids, { multiple: true, checked: label[:checked], disabled: label[:disabled], include_hidden: false },
        label[:id] %>
        <label style="background-color: aquamarine"><%= label.name %></label>
      <% end %>
    </div>

    <div class ="form-group">
      <%= f.label :limit_datetime, t('view.limit_datetime') %>
      <%= f.datetime_select(
        :limit_datetime,
        user_month_numbers: true,
        default: Date.today
      ) %>
    </div>

    <br />
    <%= f.submit class: 'btn btn-default' %>
  <% end %>
  <div class='btn btn-default'><%= link_to t('view.back'), root_path %></div>
</div>
