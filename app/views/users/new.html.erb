<h1>sign up</h1>

<% if @user.errors.any? %>
  <div id="errors_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohabited this @user from being saved</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<ul>
    <%= form_with(model:@user, local:true) do |f| %>
      <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div>
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div>
        <%= f.label :image, "プロフィール画像"%>
        <%= f.file_field :image %>
      </div>

      <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>
      
      <div>
        <%= f.submit %>
      </div>

    <% end %>
</ul>
