<h1>sign up</h1>

<% if @user.errors.any? %>
  <div id="errors_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohabited this @user from being saved</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<ul>
  <table>
    <tbody>
      <%= form_with(model:@user, local:true) do |f| %>
        
        <tr>
          <th class="col-md-2">
            <%= f.label :name %>
          </th>
          <td class="col-md-10">
            <%= f.text_field :name %>
          </td>
        </tr>
        
        <tr>
          <th class="col-md-2">
            <%= f.label :email %>
          </th>
          <td class="col-md-10">
            <%= f.email_field :email %>
          </td>
        </tr>
        
        <tr>
          <th class="col-md-2">
            <%= f.label :image, "プロフィール画像"%>
          </th>
          <td class="col-md-10">
            <%= f.file_field :image %>
          </td>
        </tr>
        
        <tr>
          <th class="col-md-2">
            <%= f.label :password %>
          </th>
          <td class="col-md-10">
            <%= f.password_field :password %>
          </td>
        </tr>
        
        <tr>
          <th class="col-md-2">
            <%= f.label :password_confirmation %>
          </th>
          <td class="col-md-10">
            <%= f.password_field :password_confirmation %>
          </td>
        </tr>
        
        <tr>
          <td class="col-md-2">
            <%= f.submit %>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</ul>
